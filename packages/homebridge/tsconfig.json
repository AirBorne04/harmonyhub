{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "rootDir": "../",
    "paths": {
      "@harmonyhub/*": ["../*"]
    },
    "noResolve": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./dist/**/*"
  ]
}